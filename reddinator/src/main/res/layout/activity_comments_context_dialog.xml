<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contentview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@android:color/transparent"
    android:padding="0dp"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".activity.ViewImageDialogActivity">

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:umanoPanelHeight="26dp"
        sothree:umanoShadowHeight="4dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <au.com.wallaceit.reddinator.ui.RWebView
                android:id="@+id/commentswebview"
                android:layout_height="match_parent"
                android:layout_width="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/info_panel"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:paddingRight="6dp">
            <RelativeLayout
                android:id="@+id/title_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">
                <TextView
                    android:id="@+id/source_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="@string/reddit_domain"
                    android:textColor="#336699"
                    android:maxLines="1"
                    android:ellipsize="marquee"
                    android:paddingTop="3dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/post_title"
                    style="@android:style/TextAppearance.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="2dp"/>

                <IconTextView
                    android:id="@+id/info_txt"
                    style="@android:style/TextAppearance.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/post_title"
                    android:layout_marginBottom="-24dp"
                    android:padding="0dp"
                    android:includeFontPadding="false"
                    android:clickable="true"
                    android:linksClickable="true"/>

                <IconTextView
                    android:id="@+id/votes_icon"
                    android:contentDescription="@string/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/info_txt"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="@string/fa_star"
                    android:shadowColor="#22000000"
                    android:shadowDx="4"
                    android:shadowDy="4"
                    android:shadowRadius="3"
                    android:padding="2dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/votes_txt"
                    android:layout_below="@id/info_txt"
                    android:layout_toRightOf="@+id/votes_icon"
                    android:layout_toEndOf="@+id/votes_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    android:textSize="16sp"/>

                <IconTextView
                    android:id="@+id/comments_icon"
                    android:contentDescription="@string/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_below="@id/votes_icon"
                    android:text="@string/fa_comment"
                    android:shadowColor="#22000000"
                    android:shadowDx="4"
                    android:shadowDy="4"
                    android:shadowRadius="3"
                    android:padding="2dp"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/comments_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/votes_txt"
                    android:layout_toRightOf="@+id/comments_icon"
                    android:layout_toEndOf="@+id/comments_icon"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    android:textSize="16sp"
                    android:textIsSelectable="false" />

                <IconTextView
                    android:id="@+id/selftext_button"
                    android:contentDescription="@string/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/info_txt"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:text="@string/fa_file_text"
                    android:shadowColor="#22000000"
                    android:shadowDx="4"
                    android:shadowDy="4"
                    android:shadowRadius="3"
                    android:paddingTop="2dp"
                    android:textSize="24sp"
                    android:textColor="#DBDBDB"
                    android:visibility="gone"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <IconButton
                    android:id="@+id/commentsbutton"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:padding="8dp"
                    android:background="#5F99CF"
                    android:text="@string/view_all_comments" />
                <IconButton
                    android:id="@+id/linkbutton"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:padding="8dp"
                    android:background="#5F99CF"
                    android:text="@string/open_context_link" />
            </LinearLayout>
        </LinearLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
</LinearLayout>
