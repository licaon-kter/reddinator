<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <color name="white">#FFFFFF</color>
    <color name="black">#000000</color>
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!-- API 11 theme customizations can go here. -->
    </style>
    <style name="Reddit" parent="android:Theme.Light">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="RedditDark" parent="android:Theme.Light">
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="AndroidHolo" parent="android:Theme.Holo">
        <item name="android:background">@android:drawable/screen_background_dark_transparent</item>
    </style>
    <style name="AndroidHoloLight" parent="android:Theme.Holo.Light">
        <item name="android:background">@android:drawable/screen_background_light_transparent</item>
    </style>

    <style name="ActionOverflowButtonStyle" parent="@android:style/Widget.Holo.Light.ActionButton">
        <item name="android:minWidth">30dip</item>
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">0dip</item>
        <item name="android:src">@drawable/menu_overflow</item>
    </style>

</resources>